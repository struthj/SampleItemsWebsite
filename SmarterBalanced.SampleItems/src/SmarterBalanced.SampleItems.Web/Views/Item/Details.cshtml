@model SmarterBalanced.SampleItems.Core.Repos.Models.ItemViewModel

<div class="local-nav">
    <ul class="list-inline">
        <li>
            <a href="" data-toggle="modal" data-target="#viewMore" aria-haspopup="true">
                View More
            </a>
        </li>
        <li>
            <a href="" data-toggle="modal" data-target="#aboutThisItem" aria-haspopup="true">
                About This Item
            </a>
        </li>
        <li>
            <a href="" data-toggle="modal" data-target="#accessibility" aria-haspopup="true">
                Item Accessibility
            </a>
        </li>
    </ul>
</div>

<hr/>

<div class="row">

    <div class="col-lg-12 col-md-12 col-sm-12">
        <iframe id="itemviewer-iframe" class="itemviewer-iframe" src="@Model.ItemViewerServiceUrl"></iframe>
    </div>
</div>

<div id="viewMore" class="modal fade" role="dialog" aria-labelledby="view-more-title" tabindex='-1'>
    <div class="modal-dialog">

        <!-- "View More" Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 id="view-more-title" class="modal-title">View More</h4>
            </div>
            <div id="more-like-this-container" class="modal-body">
                <p>Other items will be displayed here.</p>
            </div>
            <div class="modal-footer">
                <button type="button" id="close-view-more-btn" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div id="aboutThisItem" class="modal fade" role="dialog" aria-labelledby="about-title" tabindex='-1'>
    <div class="modal-dialog">

        <!-- "About This Item" Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 id="about-title" class="modal-title">About This Item</h4>
            </div>
            <div id="about-item-container" class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" id="close-about-btn" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div id="accessibility" class="modal fade" role="dialog" aria-labelledby="accessibility-title" tabindex='-1'>
    <div class="modal-dialog">

        <!-- Local Accessibility Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 id="accessibility-title" class="modal-title">Item Accessibility</h4>
            </div>
            <div id="accessibilityContent" class="modal-body">
                @Html.Partial("_LocalAccessibility", Model.LocalAccessibilityViewModel)
            </div>
            <div class="modal-footer">
                <button type="button" id="close-accessibility-btn" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    
    <script src="~/scripts/AboutItem.js"></script>
    <script src="~/scripts/Collapsible.js"></script>
    <script src="~/scripts/ItemAccessibility.js"></script>
    <script src="~/scripts/GradeLevels.js"></script>
    <script src="~/scripts/ItemDetailsManager.js"></script>

    <script>
        $(document).ready(() => {
            var url = '@Html.Raw(Url.Action("ResetToGlobalAccessibility", "Item",
                new { bankKey = Model.ItemDigest.BankKey, itemKey = Model.ItemDigest.ItemKey }))';
            var itemDigest = @Json.Serialize(Model.ItemDigest);
            var manager = new ItemDetails.ItemDetailsManager(url, itemDigest)
        });

    </script>
}